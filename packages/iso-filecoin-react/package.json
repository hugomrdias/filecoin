{
  "name": "iso-filecoin-react",
  "type": "module",
  "version": "2.2.0",
  "description": "Context and hooks for Filecoin wallets.",
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "funding": "https://github.com/sponsors/hugomrdias",
  "license": "MIT",
  "homepage": "https://github.com/hugomrdias/filecoin/tree/main/packages/iso-filecoin-react",
  "repository": {
    "url": "hugomrdias/filecoin",
    "directory": "packages/iso-filecoin-react"
  },
  "bugs": {
    "url": "https://github.com/hugomrdias/filecoin/issues"
  },
  "keywords": [
    "filecoin",
    "metamask",
    "ledger",
    "dapp",
    "react",
    "hook",
    "context"
  ],
  "sideEffects": false,
  "main": "./src/index.js",
  "module": "./src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist/src/**/*.d.ts",
    "dist/src/**/*.d.ts.map"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.js"
    },
    "./wallet-provider": {
      "types": "./dist/src/wallet-provider.d.ts",
      "default": "./src/wallet-provider.js"
    },
    "./types": {
      "types": "./dist/src/types.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "wallet-provider": [
        "dist/src/wallet-provider"
      ],
      "types": [
        "dist/src/types"
      ]
    }
  },
  "scripts": {
    "lint": "tsc --build && biome check --no-errors-on-unmatched --files-ignore-unknown=true",
    "test": "playwright-test --runner mocha"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "iso-filecoin": "workspace:^",
    "react": ">=18"
  },
  "dependencies": {
    "iso-filecoin-wallets": "workspace:*"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.85.5",
    "@testing-library/react": "^16.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "assert": "^2.1.0",
    "mocha": "^11.7.1",
    "playwright-test": "^14.1.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "type-fest": "^4.41.0",
    "typescript": "5.8.3"
  },
  "publishConfig": {
    "provenance": true
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignorePatterns": [
      "dist",
      ".wireit"
    ],
    "ignores": [
      "@types/*",
      "assert",
      "mocha",
      "playwright-test",
      "type-fest"
    ]
  }
}
