{
	"name": "iso-filecoin-react",
	"type": "module",
	"version": "1.0.0",
	"description": "Context and hook for filecoin wallets.",
	"author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
	"funding": "https://github.com/sponsors/hugomrdias",
	"license": "MIT",
	"homepage": "https://github.com/hugomrdias/filecoin/tree/main/packages/iso-filecoin-react",
	"repository": {
		"url": "hugomrdias/filecoin",
		"directory": "packages/iso-filecoin-react"
	},
	"bugs": {
		"url": "https://github.com/hugomrdias/filecoin/issues"
	},
	"keywords": [
		"filecoin",
		"metamask",
		"ledger",
		"dapp",
		"react",
		"hook",
		"context"
	],
	"sideEffects": false,
	"main": "./src/index.js",
	"module": "./src/index.js",
	"types": "./dist/src/index.d.ts",
	"files": [
		"src",
		"dist/src/**/*.d.ts",
		"dist/src/**/*.d.ts.map"
	],
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"default": "./src/index.js"
		},
		"./wallet-provider": {
			"types": "./dist/src/wallet-provider.d.ts",
			"default": "./src/wallet-provider.js"
		},
		"./types": {
			"types": "./dist/src/types.d.ts"
		}
	},
	"typesVersions": {
		"*": {
			"wallet-provider": [
				"dist/src/wallet-provider"
			],
			"types": [
				"dist/src/types"
			]
		}
	},
	"scripts": {
		"lint": "tsc --build && biome check --no-errors-on-unmatched --files-ignore-unknown=true",
		"test": "playwright-test --runner mocha"
	},
	"peerDependencies": {
		"react": ">=18"
	},
	"dependencies": {
		"@tanstack/react-query": "^5.66.9",
		"iso-filecoin": "workspace:^"
	},
	"devDependencies": {
		"@testing-library/react": "^16.2.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.4",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"assert": "^2.1.0",
		"mocha": "^11.1.0",
		"playwright-test": "^14.1.9",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"typescript": "5.7.3"
	},
	"publishConfig": {
		"provenance": true
	},
	"depcheck": {
		"specials": [
			"bin"
		],
		"ignorePatterns": [
			"dist",
			".wireit"
		],
		"ignores": [
			"@types/*",
			"assert",
			"mocha",
			"playwright-test"
		]
	}
}
